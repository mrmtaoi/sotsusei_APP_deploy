<h2>ログイン</h2>

<%= form_with(url: login_path, method: :post) do |f| %>
  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, name: 'session[email]', autofocus: true, required: true %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %><br />
    <%= f.password_field :password, name: 'session[password]', required: true %>
  </div>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>  

<%= link_to "新規登録がまだの方はこちら", signup_path %>
