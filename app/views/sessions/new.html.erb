<div class="login-container">
  <h2>ログイン</h2>

  <%= form_with(url: login_path, method: :post, data: { turbo: false }, class: "login-form") do |f| %>
    <div class="field">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, name: 'session[email]', autofocus: true, required: true, class: "form-input" %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, name: 'session[password]', required: true, class: "form-input" %>
    </div>

    <div class="field checkbox-field">
      <%= f.check_box :remember_me, value: "1" %>
      <%= f.label :remember_me, "ログイン情報を記憶する" %>
    </div>

    <div class="actions">
      <%= f.submit "ログイン", class: "login-button" %>
    </div>
  <% end %>

  <!-- Googleログインボタン -->
  <%= button_to "/auth/google_oauth2", method: :post, class: "gsi-material-button", data: { turbo: false } do %>
    <div class="gsi-material-button-state"></div>
    <div class="gsi-material-button-content-wrapper">
      <div class="gsi-material-button-icon">
        <svg version="1.1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48">
          <path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"/>
          <path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"/>
          <path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z"/>
          <path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"/>
          <path fill="none" d="M0 0h48v48H0z"/>
        </svg>
      </div>
      <span class="gsi-material-button-contents">Googleでログイン</span>
    </div>
  <% end %>

  <div class="signup-link">
    <%= link_to "新規登録がまだの方はこちら", signup_path %>
  </div>
</div>
