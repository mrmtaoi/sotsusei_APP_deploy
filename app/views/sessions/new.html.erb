<h2>ログイン</h2>

<%= form_with(url: login_path, method: :post, data: { turbo: false }) do |f| %>
  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, name: 'session[email]', autofocus: true, required: true %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %><br />
    <%= f.password_field :password, name: 'session[password]', required: true %>
  </div>

  <%= f.check_box :remember_me, value: "1" %>
  <%= f.label :remember_me, "ログイン情報を記憶する" %>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %> 

<%= link_to "Googleでログイン", "/auth/google_oauth2" %>

<%= link_to "新規登録がまだの方はこちら", signup_path %>
