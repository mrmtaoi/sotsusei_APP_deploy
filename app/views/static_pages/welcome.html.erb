  <div class="navbar-left-top-container">
    <nav>
      <ul class="navbar-left-top">
        <li><%= link_to "新規登録", signup_path, class: 'btn btn-primary-top custom-btn' %></li>
        <li><%= link_to "ログイン", login_path, class: 'btn btn-secondary-top custom-btn' %></li>
      </ul>
    </nav>
    <%= image_tag 'top.jpg', style: 'position: absolute; top: 380px; bottom: 0px; left: 600px; height: 400px;' %>
