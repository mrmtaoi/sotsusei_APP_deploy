<%= form_with model: @emergency_kit, url: stocks_emergency_kits_path do |f| %>
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-lg-8 mx-auto">
        <h1>防災バッグ作成</h1>
        
        <div class="mb-3">
          <%= f.label :owner_name, "名前＜必須項目＞", class: "form-label" %>
          <%= f.text_field :owner_name, class: "form-control", autocomplete: "off" %>
        </div>
        
        <div class="mb-3">
          <%= f.label :age, "年齢", class: "form-label" %>
          <%= f.number_field :age, class: "form-control", autocomplete: "off", min: 1, step: 1 %>
        </div>
        
        <div class="mb-3">
          <%= f.label :gender, "性別", class: "form-label" %>
          <%= f.select :gender, options_for_select(@gender_options), { include_blank: '性別を選択してください' }, class: 'form-control' %>
        </div>
        
        <div class="mb-3">
          <%= f.label :storage, "保管場所", class: "form-label" %>
          <%= f.text_field :storage, class: "form-control", autocomplete: "off" %>
        </div>
        
        <%= f.fields_for :reminders do |reminder_fields| %>
          <div class="mb-3">
            <%= reminder_fields.label :interval_months, "かくにんサイクル（月単位）", class: "form-label" %>
            <%= reminder_fields.number_field :interval_months, class: "form-control", autocomplete: "off", min: 1, step: 1 %>
          </div>
        <% end %>
        
        <%= f.submit "リュックの登録", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
